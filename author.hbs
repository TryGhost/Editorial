{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Author info --}}
{{#author}}
<header class="author-header">
    {{#if profile_image}}
        <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" />
    {{/if}}
    <h1><a href="{{url}}">{{name}}</a></h1>
    {{#if bio}}
        <p class="content">{{bio}}</p>
    {{/if}}
    <div class="author-meta">
        {{#if location}}
        <div class="author-location icon fa-map-pin">{{location}} <span class="bull">&bull;</span></div>
        {{/if}}
        <div class="author-stats">
            {{plural ../pagination.total empty='(t "No posts")' singular='(t "% post")' plural='(t "% posts")'}} <span class="bull">&bull;</span>
        </div>
        {{#if website}}
        <a href="{{website}}" class="icon fa-globe" title="{{t "Website"}}"><span class="label">{{t "Website"}}</span></a>
        {{/if}}
        {{#if twitter}}
        <a href="{{twitter_url}}" class="icon fa-twitter" title="Twitter"><span class="label">Twitter</span></a>
        {{/if}}
        {{#if facebook}}
        <a href="{{facebook_url}}" class="icon fa-facebook" title="Facebook"><span class="label">Facebook</span></a>
        {{/if}}
        <a href="{{url absolute="true"}}rss/" class="icon fa-rss" title="RSS" target="_blank" rel="noopener"><span class="label">RSS</span></a>
    </div>
</header>
{{/author}}

{{!-- Posts --}}
<section>

    <section class="posts">
        {{#foreach posts}}
        <article>
            {{#if feature_image}}
            <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
            {{/if}}
            <h3><a href="{{url}}">{{title}}</a></h3>
            <p>{{excerpt words="33"}}</p>
            <ul class="actions special">
                <li><a href="{{url}}" class="button">{{t "Full Story"}}</a></li>
            </ul>
        </article>
        {{/foreach}}
    </section>

</section>

{{!-- Pagination --}}
{{pagination}}