<footer>
    <nav class="pagination" role="navigation">
        {{#if prev}}
        <a class="page previous newer-posts" href="{{page_url prev}}">{{t Newer Posts}}</a>
        {{/if}}
        <span class="page-number">{{t Page {{page}} of {{pages}}}}</span>
        {{#if next}}
        <a class="page next older-posts" href="{{page_url next}}">{{t Older Posts}}</a>
        {{/if}}
    </nav>
</footer>